<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/current_location"
            android:background="@color/amber"
            android:text="@string/today"
            android:textColor="@android:color/white"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- <ListView
            android:id="@+id/places_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView> -->
        <ScrollView
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_width="match_parent">
            <TableLayout
                android:id="@+id/location_weather_grid"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                >
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <sunnyweather.rokuan.com.sunny.views.FullWeatherView
                        android:layout_width="match_parent"
                        android:layout_span="2"
                        android:layout_height="@dimen/home_weather_view_height" />
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                    <sunnyweather.rokuan.com.sunny.views.SimpleWeatherView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_weather_view_height" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loading_frame"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@color/light_amber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <TextView
            android:textSize="24dp"
            android:text="@string/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>